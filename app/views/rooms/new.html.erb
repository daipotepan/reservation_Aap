<h3>施設新規登録</h3>

<%= render "shared/current_user" %>
<%= render "shared/error", obj: @room %>

<%= form_with model: @room do |f| %>
  <table>
    <tr>
      <th><%= f.label :room_img, "施設画像" %></th>
      <td><%= f.file_field :room_img %></td>
    </tr>

    <tr>
      <th><%= f.label :name, "施設名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction, "紹介文" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :payment_amount, "宿泊料金(/日)" %></th>
      <td><%= f.text_field :payment_amount %></td>
    </tr>

    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address%></td>
    </tr>

  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する" %></li>
      <li><%= link_to "宿一覧へ", rooms_path %></li>
    </ul>
  </div>

<% end %>