<h3>施設一覧</h3>

<%= render "shared/current_user" %>


<table>
  <thead>
    <tr>
      <th>施設画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>宿泊料金 （/日）</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><img><%= room.room_img %></img></td>
        <td><%= room.name %></td>
        <td><%= room.introduction %></td>
        <td><%= room.payment_amount %></td>
        <td><%= room.created_at.to_fs(:date_jp) %></td>
    <% end %>
  </tbody>
</table>

<p><%= link_to "施設新規登録", new_room_path %></p>
