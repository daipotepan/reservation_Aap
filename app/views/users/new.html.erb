<h3>ユーザー新規登録</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :icon, "アイコン" %></th>
      <td><%= f.file_field :icon %></td>
    </tr>

    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :email, "メールアドレス" %></th>
      <td><%= f.email_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :password, "パスワード" %></th>
      <td><%= f.password_field :password %></td>
    </tr>

    <tr>
      <th><%= f.label :conf_password, "確認用パスワード" %></th>
      <td><%= f.password_field :conf_password %></td>
    </tr>

    <tr> 
      <th><%= f.label :introduction, "自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録完了する" %></li>
      <li><%= link_to "ログイン画面へ", users_login_path %></li>
    </ul>
  </div>

<% end %>