<h3>プロフィール編集</h3>

<%= render "shared/current_user" %>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :icon, "アイコン" %></th>
      <td><%= f.file_field :icon %></td>
    </tr>

    <tr>
      <th><%= f.label :name, "名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr> 
      <th><%= f.label :introduction, "自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集完了する" %></li>
      <li><%= link_to "ユーザー情報ページに戻る", users_path %></li>
    <ul>
  </div>
<% end %>
